{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Configure crowdsec",
    "$id": "http://nethserver.org/json-schema/task/input/crowdsec/configure-module",
    "description": "Configure crowdsec",
    "examples": [
        {
            "helo_host": "foo.domain.com",
            "receiver_emails": [
                "user@domain.com",
                "user@domain.org"
            ],
            "bantime": "1",
            "dyn_bantime": true,
            "ban_local_network": false,
            "enroll_instance": "cl7ze8xdn00030vl70tyutuxjj",
            "enable_online_api": true,
            "group_threshold": 100,
            "dynamic_bantime_duration": "4"
        }
    ],
    "type": "object",
    "required": [
        "helo_host",
        "receiver_emails",
        "bantime",
        "dyn_bantime",
        "ban_local_network",
        "enroll_instance",
        "enable_online_api",
        "group_threshold",
        "dynamic_bantime_duration"
    ],
    "properties": {
        "group_threshold": {
            "type": "integer",
            "minimum": 1,
            "maximum": 10000,
            "title": "group_threshold",
            "description": "Number of alerts to group before sending an email"
        },
        "helo_host": {
            "anyOf": [
                {
                    "type": "string",
                    "format": "idn-hostname",
                    "description": "Helo host value for SMTP"
                },
                {
                    "description": "Helo host value for SMTP",
                    "type": "string",
                    "maxLength": 0
                }
            ]
        },
        "receiver_emails": {
            "anyOf": [
                {
                    "type": "array",
                    "title": "receiver_emails",
                    "minItems": 1,
                    "description": "List of administrators to send crowdsec alerts",
                    "items": {
                        "type": "string",
                        "maxLength": 0
                    }
                },
                {
                    "type": "array",
                    "title": "receiver_emails",
                    "minItems": 1,
                    "description": "List of administrators to send crowdsec alerts",
                    "items": {
                        "type": "string",
                        "format": "idn-email"
                    }
                }
            ]
        },
        "bantime": {
            "type": "string",
            "title": "bantime",
            "description": "Ban time duration of bots (m:minute, h:hour)"
        },
        "dyn_bantime": {
            "type": "boolean",
            "title": "dyn_bantime",
            "description": "Allow to ban with a dynamic bantime value (each ban increase the time)"
        },
        "whitelists": {
            "type": "array",
            "items": {
                "type": "string",
                "anyOf": [
                    {
                        "description": "textarea empty",
                        "type": "string",
                        "maxLength": 0
                    },
                    {
                        "description": "ipv4",
                        "format": "ipv4"
                    },
                    {
                        "description": "cidr ipv4",
                        "pattern": "^(25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\\.(25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\\.(25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\\.(25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\\/(3[0-2]|[12]?[0-9])$"
                    },
                    {
                        "description": "ipv6 and cidr ipv6",
                        "pattern": "^[0-9a-fA-F:]+(/[0-9]+)?$"
                    },
                    {
                        "description": "hostname",
                        "pattern": "^[a-zA-Z0-9.-]+\\.[a-zA-Z]{2,}$"
                    }
                ]
            }
        },
        "ban_local_network": {
            "type": "boolean",
            "title": "ban_local_network",
            "description": "Allow to ban on the local network"
        },
        "enroll_instance": {
            "type": "string",
            "title": "enroll_instance",
            "description": "Enroll a crowdsec instance to app.crowdsec.net"
        },
        "enable_online_api": {
            "type": "boolean",
            "title": "enable_online_api",
            "description": "Enable the central API"
        },
        "dynamic_bantime_duration": {
            "type": "string",
            "pattern": "^[1-9][0-9]*$",
            "title": "dynamic_bantime_duration",
            "description": "Base duration for dynamic bantime"
        }
    }
}
