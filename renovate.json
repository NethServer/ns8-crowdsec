{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "local>NethServer/.github:ns8"
  ],
  "regexManagers": [
    {
      "fileMatch": ["build-images.sh"],
      "matchStrings": [
        "crowdsec-firewall-bouncer/releases/download/v(?<currentValue>[0-9.]+)/crowdsec-firewall-bouncer-linux-amd64.tgz"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "crowdsecurity/cs-firewall-bouncer"
    }
  ]
}
